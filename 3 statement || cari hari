//menampilkan hari
#include <iostream>
using namespace std;

void main()
{
	int hari, pilih;

	cout<<"Keterangan Hari= "<<endl;
	cout<<"1= Senin 2= Selasa 3= Rabu 4= Kamis"<<endl;
	cout<<"5= Jumat 6= Sabtu 7= Minggu"<<endl;
	cout<<"==================================="<<endl<<endl;

	cout<<"masukkan angka hari= ";
	cin>>pilih;

	if (pilih==1)
	{
		cout<<"ini adalah hari SENIN"<<endl;
	}
	else if (pilih==2)
	{
		cout<<"ini adalah hari SELASA"<<endl;
	}
	else if (pilih==3)
	{
		cout<<"ini adalah hari RABU"<<endl;
	}
	else if (pilih==4)
	{
		cout<<"ini adalah hari KAMIS"<<endl;
	}
	else if (pilih==5)
	{
		cout<<"ini adalah hari JUM'AT"<<endl;
	}
	else if (pilih==6)
	{
		cout<<"ini adalah hari SABTU"<<endl;
	}
	else if (pilih==7)
	{
		cout<<"ini adalah hari MINGGU"<<endl;
	}
	else
	{
		cout<<"DASAR!!!!!! Bid'ah kamu ini!!!"<<endl;
	}
	cout<<endl;

	system ("pause");
}
